<Application xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 x:Class="FlemStudio.Project.Avalonia.App"
			 RequestedThemeVariant="Dark"
			xmlns:local="using:FlemStudio.Project.Avalonia"
			 
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			 >

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<SimpleTheme />
		<materialIcons:MaterialIconStyles />
	</Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="ThemeControlMidBrush">#2e2e2e</SolidColorBrush>
		<SolidColorBrush x:Key="ThemeControlHighlightMidBrush">#3d3d3d</SolidColorBrush>

		<SolidColorBrush x:Key="ThemeFocusBrush">Green</SolidColorBrush>

	</Application.Resources>
</Application>
